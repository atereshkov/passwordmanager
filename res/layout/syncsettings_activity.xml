<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="5dp">
        <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/imageView5" android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:src="@drawable/dropboxlogo"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/dropbox_about"
                android:id="@+id/textView6"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp" android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView5" android:layout_toEndOf="@+id/imageView5"/>
    </RelativeLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Синхронизация с Dropbox"
            android:id="@+id/loginBtn" android:layout_gravity="center_horizontal" android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/isAuthView" android:layout_gravity="center_horizontal" android:textSize="15dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Скачать бэкап с сервера"
            android:id="@+id/downloadButton" android:layout_gravity="center_horizontal" android:onClick="Download"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загрузить бэкап на сервер"
            android:id="@+id/uploadButton" android:layout_gravity="center_horizontal" android:onClick="Upload"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/lastSync" android:layout_gravity="center_horizontal"/>
    <LinearLayout
            android:id="@+id/container_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
    </LinearLayout>
    <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2" android:layout_gravity="center_horizontal"/>

</LinearLayout>