<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ЛОГИН"
            android:id="@+id/textView4" android:layout_marginTop="5dp" android:layout_marginLeft="42dp"
            android:layout_marginRight="5dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginLeft="5dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usernameAddEdit"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="5dp"/>

    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ПАРОЛЬ"
            android:id="@+id/textView5" android:layout_marginLeft="42dp" android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/password_item"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordAddEdit" android:layout_marginLeft="37dp" android:layout_marginRight="5dp"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showPasswordCheckBox" android:layout_gravity="right"
                android:checked="false" android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_marginRight="5dp"/>

    </RelativeLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ВЕБ-САЙТ"
            android:id="@+id/textView6" android:layout_marginLeft="42dp" android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/www"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/siteAddEdit" android:layout_marginRight="5dp" android:layout_marginLeft="37dp"/>
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="E-MAIL"
            android:id="@+id/textView8" android:layout_marginLeft="42dp" android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@drawable/email"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailAddEdit" android:layout_marginLeft="37dp" android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ЗАМЕТКИ"
            android:id="@+id/textView7" android:layout_marginLeft="42dp" android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/notes"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/notesAddEdit" android:layout_marginLeft="37dp" android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView8"
            android:src="@drawable/category"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" android:layout_marginLeft="37dp" android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

</LinearLayout>